{
  "name": "@pops/hub",
  "version": "1.0.0",
  "private": true,
  "description": "POps Hub - Central dashboard for the Personal Operations Suite",
  "type": "module",
  "scripts": {
    "dev": "vite --port 4000",
    "build": "tsc -b && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "preview": "vite preview --port 4000",
    "storybook": "storybook dev -p 6001",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@pops/navigation": "workspace:*",
    "@pops/types": "workspace:*",
    "@pops/ui": "workspace:*",
    "@pops/widgets": "workspace:*",
    "@tailwindcss/vite": "^4.1.11",
    "lucide-react": "^0.537.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-grid-layout": "^1.4.4",
    "react-resizable": "^3.0.5",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@storybook/react": "^9.1.1",
    "@storybook/react-vite": "^9.1.1",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/react-grid-layout": "^1.3.5",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^0.11.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "storybook": "^9.1.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.6"
  }
}
