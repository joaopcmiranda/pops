{
  "name": "@pops/finance-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/router.ts",
      "default": "./src/router.ts"
    },
    "./modules/imports": {
      "types": "./src/modules/imports/types.ts",
      "default": "./src/modules/imports/types.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "dev:init": "tsx scripts/init-db.ts",
    "db:clear": "tsx scripts/db-clear.ts",
    "db:seed": "tsx scripts/db-seed.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --check \"src/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "ci": "yarn typecheck && yarn lint && yarn format && yarn test && yarn build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@notionhq/client": "^2.2.15",
    "@pops/db-types": "*",
    "@trpc/server": "^11.0.0",
    "better-sqlite3": "^11.7.0",
    "dotenv": "^17.3.1",
    "express": "^5.0.1",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.3",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.12.0",
    "@types/papaparse": "^5.5.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "papaparse": "^5.5.3",
    "prettier": "^3.0.0",
    "supertest": "^7.2.2",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.0.0"
  }
}
