{
  "name": "@pops/monorepo",
  "private": true,
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "packages/db-types",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo dev --filter=!@pops/notion-sync",
    "dev:full": "turbo dev",
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format:check": "turbo format:check",
    "format:fix": "turbo format:fix",
    "ci:fix": "turbo run lint:fix && turbo run format:fix && turbo run typecheck lint format:check && (cd packages/import-tools && yarn ci:fix)"
  },
  "devDependencies": {
    "turbo": "^2.8.3"
  }
}
