{
  "name": "pops",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter='@pops/*-service' --filter='@pops/travel' --parallel",
    "dev:travel": "turbo run dev --filter=@pops/travel",
    "dev:services": "turbo run dev --filter='@pops/*-service' --parallel",
    "dev:backend": "turbo run dev --filter='@pops/*-service' --parallel",
    "dev:frontend": "turbo run dev --filter='./apps/*' --parallel",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "type-check": "turbo run type-check",
    "check": "turbo run type-check lint format format:check --parallel",
    "test": "turbo run test",
    "clean": "turbo daemon clean && rm -rf node_modules/.cache/turbo",
    "prepare": "husky",
    "services:dev": "./scripts/dev-start.sh",
    "services:stop": "./scripts/dev-stop.sh",
    "services:health": "./scripts/health-check.sh",
    "services:build": "turbo run build --filter='./services/*'",
    "services:start": "turbo run start --filter='./services/*' --parallel",
    "deploy:test": "./scripts/test-deployment.sh",
    "deploy:health": "./scripts/health-check.sh",
    "storybook": "turbo run storybook --filter=@pops/travel",
    "build-storybook": "turbo run build-storybook --filter=@pops/travel"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "9.1.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "puppeteer": "^24.16.0",
    "turbo": "^2.5.5",
    "typescript-eslint": "^8.39.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "storybook": "9.1.0"
  }
}
