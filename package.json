{
  "name": "trip-organizer",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "nx run-many -t build",
    "dev": "nx run-many -t dev --verbose --parallel",
    "lint": "nx run-many -t lint",
    "lint:fix": "nx run-many -t lint:fix",
    "format": "nx run-many -t format",
    "format:check": "nx run-many -t format:check",
    "type-check": "nx run-many -t type-check",
    "test": "nx run-many -t test",
    "clean": "nx reset",
    "prepare": "husky",
    "deploy:test": "./scripts/test-deployment.sh",
    "deploy:health": "./scripts/health-check.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "nx": "^20.3.0",
    "@nx/workspace": "^20.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@1.22.22"
}