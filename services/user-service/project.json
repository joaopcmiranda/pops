{
  "name": "user-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "services/user-service/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc",
        "cwd": "services/user-service"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx watch src/index.ts",
        "cwd": "services/user-service",
        "color": true
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/index.js",
        "cwd": "services/user-service"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint src --ext .ts --report-unused-disable-directives --max-warnings 0",
        "cwd": "services/user-service"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint src --ext .ts --fix",
        "cwd": "services/user-service"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "services/user-service"
      }
    },
    "db:generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "drizzle-kit generate",
        "cwd": "services/user-service"
      }
    },
    "db:push": {
      "executor": "nx:run-commands",
      "options": {
        "command": "drizzle-kit push",
        "cwd": "services/user-service"
      }
    },
    "db:migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx src/scripts/migrate.ts",
        "cwd": "services/user-service"
      }
    },
    "db:seed": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx src/scripts/seed.ts",
        "cwd": "services/user-service"
      }
    },
    "health": {
      "executor": "nx:run-commands",
      "options": {
        "command": "curl -s -f http://localhost:3005/health > /dev/null",
        "cwd": "services/user-service"
      }
    }
  }
}
