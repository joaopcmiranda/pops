{
  "name": "api-gateway",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "services/api-gateway/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc",
        "cwd": "services/api-gateway"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx watch src/index.ts",
        "cwd": "services/api-gateway",
        "color": true
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/index.js",
        "cwd": "services/api-gateway"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint src --ext .ts --report-unused-disable-directives --max-warnings 0",
        "cwd": "services/api-gateway"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint src --ext .ts --fix",
        "cwd": "services/api-gateway"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "services/api-gateway"
      }
    },
    "health": {
      "executor": "nx:run-commands",
      "options": {
        "command": "curl -s -f http://localhost:3001/health > /dev/null",
        "cwd": "services/api-gateway"
      }
    }
  }
}
