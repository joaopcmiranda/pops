---
# yamllint configuration for POPS Ansible project
extends: default

rules:
  # Line length - allow longer lines for readability in templates
  line-length:
    max: 160
    level: warning

  # Indentation - 2 spaces, consistent with Ansible best practices
  indentation:
    spaces: 2
    indent-sequences: true

  # Comments - require space after # but allow stand-alone comments
  comments:
    min-spaces-from-content: 1

  # Truthy values - allow yes/no/true/false (common in Ansible)
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']
    check-keys: false

  # Document start - not required for all YAML files
  document-start:
    present: false

  # Trailing spaces - not allowed
  trailing-spaces: enable

  # Empty lines - max 1 empty line
  empty-lines:
    max: 1

  # New lines - require newline at end of file
  new-line-at-end-of-file: enable

  # Key duplicates - not allowed
  key-duplicates: enable

  # Brackets - consistent spacing
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1

  # Braces - consistent spacing for Jinja2 templates
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1

# Ignore patterns
ignore: |
  .github/
  node_modules/
  services/
  tools/
  *.lock
